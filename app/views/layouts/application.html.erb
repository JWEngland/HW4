<!DOCTYPE html>
<html>
<head>
  <title>Places App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_include_tag 'application' %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/css/bootstrap.min.css">
</head>
<body>

  <div class="container">
    <div class="alert alert-success">
      <%= flash["notice"] %>
    </div>
  
    <nav class="navbar navbar-expand navbar-light bg-light">
      <a class="navbar-brand" href="/">Home</a>
      <% if current_user %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Logout", logout_path, method: :delete, class: "nav-link" %>
          </li>
        </ul>
      <% else %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/new">Signup</a>
          </li>
        </ul>
      <% end %>
    </nav>
  
    <% if current_user %>
      <p>Logged in as: <%= current_user.email %> (Username: <%= current_user.username %>)</p>
    <% end %>
  
    <%= yield %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/js/bootstrap.min.js"></script>
</body>
</html>
