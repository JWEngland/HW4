<h1>Login</h1>
<%= form_with(url: login_path, method: :post) do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit 'Login' %>
  </div>
<% end %>