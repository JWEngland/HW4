<div class="container">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title"><%= @post.title %></h1>
      <p class="card-text"><%= @post.description %></p>
      <p class="card-text">Posted on: <%= @post.posted_on.strftime("%B %d, %Y") %></p>
      <% if @post.image.attached? %>
        <%= image_tag @post.image, class: "card-img-top" %>
      <% end %>
    </div>
  </div>
</div>
